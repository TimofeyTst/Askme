<div class = "container title-lg" >
  <p>Профиль пользователя: <%= @user.name %></p>
  <%= render 'avatar', user: @user, avatar_class: "avatar-big" %>
  <p class="text-sm question-footer">Зарегистрировался <%=l(@user.created_at, format: :short) %></p>
  <% if current_user == @user %>
    <%= render 'users/buttons' %>
  <% end %>
</div>

 <div class = "mt-sm container" >
  <div class = "container mt-sm" >
   <h2 class = "title-lg">
     <%= @questions.count %>
     <%= inclination(@questions.count, 'вопрос','вопроса','вопросов')%>    
   </h2>
  </div>

  <div class="container question_form">
    <%= render 'questions/form', user: @user, question: @user.questions.build %>
  </div>

  <div id="questions">
    <% @questions.each do |question| %>
        <%= render 'questions/question', user: @user, question: question %>
    <% end %>
  </div>


</div>

