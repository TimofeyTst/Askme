  <div class = "mt" >
    <%= form_with model: user, method: :put do |form| %>
      <% if user.errors.any? %>
        <div style="color: red">
          <ul>
            <% user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <p class = 'mt' ><%= form.label :name, 'Ваше имя:' %></p>
      <p><%= form.text_field :name, class: 'form-text-field' %></p>

      <p class = 'mt' ><%= form.label :nickname, 'Ник на сайте:' %></p>
      <p><%= form.text_field :nickname, class: 'form-text-field' %></p>

      <p class = 'mt' ><%= form.label :email, 'Электронная почта' %></p>
      <p><%= form.text_field :email, class: 'form-text-field' %></p>

      <p class = 'mt' ><%= form.label :password, 'Пароль' %></p>
      <p><%= form.password_field :password, class: 'form-text-field', required: "" %></p>
      
      <div class="row">
         <div class="field">
           <%= form.label :avatar, (t 'Profile photo') %>
           <%= form.file_field :avatar, :id => "imgInp", data: { controller: "img-preview" } %>
         </div>
         <div class="field">
           <%= image_tag 'default_preview.png', id: 'blah', class: 'avatar-mini' %>
         </div>
      </div>

      <p class = 'mt-lg' ><%= form.submit 'Обновить', class: 'button button-main'%></p>
    <% end %>

  </div>